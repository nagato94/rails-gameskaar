<div class="container">
  <h1 class="text-center my-5">Games Listings</h1>

  <%= link_to 'Create game listing', new_user_game_path(current_user), class: "btn btn-outline-success mb-4" %>

  <div class="row">
    <% @games.each do |game| %>
      <div class="col-md-4 mb-4">
        <div class="card-category card">
          <%= cl_image_tag game.image.key, class: "card-img-top" %>
        </div>
          <div class="card-body">
            <p class="text-center mt-2"><%= link_to game.name, game_path(game), class: "text-decoration-none" %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>
