<div class="container">
  <h1 class="text-center">Games Listings</h1>
  <%= link_to 'Create game listing', new_user_game_path(current_user), class:"btn btn-primary"  %>
  <div class="row mt-3">
    <% @games.each do |game| %>
      <div class="card m-1" style="width: 20rem;">
        <div class="card-body">
          <h6 class="card-title"><%= link_to game.name, game_path(game) %></h6>
        </div>
      </div>
    <% end %>
  </div>
</div>
