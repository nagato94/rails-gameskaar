<div class="container col-6 justify-content-center m-auto">
  <h2 class="text-center">New Listing</h2>
  <%= simple_form_for(@game) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, collection: Game::CATEGORY%>
    <%= f.input :price %>
    <%= f.input :image, as: :file, cloudinary: { resource_type: :image, tags: ['post_picture'] } %>
    <%= link_to games_path do%>
      <button class="bot-purple mt-2"><i class="fa-solid fa-arrow-left fa-2xs"> Back</i></button>
    <% end %>
    <%= f.submit class: 'btn btn-sm btn-success' %>
  <% end %>
</div>
