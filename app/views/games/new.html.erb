  <div class="container w-50">
    <div class="col-12">
      <h2 class="text-center my-5">New Listing</h2>
      <%= simple_form_for(@game) do |f| %>
        <div class="row"><%= f.input :name, placeholder: "Enter game name" %></div>
        <div class="row"><%= f.input :description %></div>
        <div class="row">
          <div class="col-6"><%= f.input :category, collection: Game::CATEGORY, prompt: "Select a category" %></div>
          <div class="col-6"><%= f.input :price, placeholder: "$ 9999"  %></div>
        </div>
        <div class="row"><%= f.input :image, label: false, as: :file, cloudinary: { resource_type: :image, tags: ['post_picture'] } %></div>
        <%= link_to 'Back', games_path, class: "bot-purple" %>
        <%= f.submit class: 'bot-yellow' %>
      <% end %>
    </div>
  </div>
