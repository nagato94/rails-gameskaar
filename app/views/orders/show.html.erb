<div class="container">
  <div class="row">
    <div class="card">
      <%= cl_image_tag @order.game.image.key, width: 400 %>
      <div class="card-body">
        <h3><%= @order.game.name %></h3>
        <p>Description: <%= @order.game.description %></p>
        <p>Category: <%= @order.game.category %></p>
        <p>Price: <%= @order.game.price %></p>
      </div>
    </div>
  </div>
  <%= link_to "back", orders_path %>
</div>
