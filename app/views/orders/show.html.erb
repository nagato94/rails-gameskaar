<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card card-category">
        <%= cl_image_tag @order.game.image.key, class: "card-img-top" %>
        </div>
        <div class="card-body mt-3">
          <h3 class="card-title text-center"><%= @order.game.name %></h3>
          <p class="card-text"><strong>Description:</strong> <%= @order.game.description %></p>
          <p class="card-text"><strong>Category:</strong> <%= @order.game.category %></p>
          <p class="card-text"><strong>Price:</strong> <%= @order.game.price %></p>
        </div>

    </div>
  </div>
  <div class="row mt-3 mb-2">
    <div class="col text-center">
      <%= link_to "Back", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
