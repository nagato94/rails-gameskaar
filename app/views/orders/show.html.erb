<div class="container">
  <h2><%= @order.game.name %></h2>
  <div class="row"> 
    
    <div class="card">
      
      <div class="card-body">
        <h5 class="card-title"><%= @order.game.name %></h5>
        <p class="card-text">"<%= @order.game.description %>"</p>
        <p class="card-text">Comment: <%= @order.comment %></p>
        <p class="card-text"> <%= @order.game.category %> </p>
        <p class="card-text"> R$<%= @order.price %> </p>
      </div>
    </div>
      <% end %>
  </div>
  <%= link_to "back", orders_path(order) %>
</div>