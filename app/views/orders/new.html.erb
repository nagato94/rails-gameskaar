<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 offset-md-3">
      <div class="card border-0">
        <div class="card-body text-center">
          <div class="card-category card">
            <%= cl_image_tag @game.image.key, class: "img-fluid" %>
          </div>
          <p class="card-text mt-2"><%= @game.description %></p>
          <p class="card-text"><strong>Price: <%= number_to_currency(@game.price) %></strong></p>
          <%= simple_form_for([@game, @order], html: { class: "mt-3" }) do |f| %>
            <%= f.submit "Confirm buy", class: "btn btn-outline-success btn-block" %>
          <% end %>
          <%= link_to 'Back', games_path, class: "btn btn-primary btn-block mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
