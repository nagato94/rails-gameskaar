<div class="container mt-5">
  <h1 class="text-center">Games Bought</h1>
  <div class="row mt-3">
    <% @orders.each do |order| %>
      <div class="col-md-2 mb-4">
        <div class="card card-listing card-category">
          <%= cl_image_tag order.game.image.key, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title text-center">
              <%= link_to order.game.name, order_path(order), class: "text-decoration-none" %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

