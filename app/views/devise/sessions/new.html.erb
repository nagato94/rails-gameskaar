<h2 class="text-center mt-5">Log in</h2>
<div class="login-box">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="user-box">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { class: "form-control", placeholder: "Email" } %>
    </div>
    <div class="user-box">
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { class: "form-control", placeholder: "Password" } %>
    </div>
    <div class="rememberme">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions mt-2 mb-2">
      <a>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <%= f.button :submit, "Log in", class: "btn submit-button"%>
      </a>
    </div>
  <% end %>

  <p>Don't have an account? <%= render "devise/shared/links", class: "text-decoration-none" %></p>
</div>

