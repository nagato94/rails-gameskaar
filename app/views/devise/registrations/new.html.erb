
  <h2 class="text-center mt-5">Sign up</h2>
  <div class="login-box">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="user-box">
      <%= f.input :email,
                required: true,
                label:  false,
                autofocus: true,
                input_html: { class: "form-control", autocomplete: "email", placeholder: "Email" }%>
    </div>
    <div class="user-box">
      <%= f.input :password,
                required: true,
                label:  false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: "Password", class:"mb-0" } %>
    </div>
    <div class="user-box">
      <%= f.input :password_confirmation,
                required: true,
                label:  false,
                input_html: { autocomplete: "new-password", placeholder: "Password confirmation" } %>
    </div>
    <div class="form-actions my-2">
      <a>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <%= f.button :submit, "Sign Up", class: "btn submit-button"%>
      </a>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
