  <h2 class="text-center mt-3">Forgot your password?</h2>

<div class="login-box mt-0">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="user-box mt-0">
      <%= f.input :email,
                required: true,
                label: false,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: "Type your e-mail", class:"mb-0" } %>
    </div>
  <div class="d-flex justify-content-center">
   <a>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <%= f.button :submit, "Send me resent password instructions", class: "btn submit-button mb-3"%>
        </a>
        </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
